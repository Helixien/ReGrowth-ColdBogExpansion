<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="Tundra"]/wildPlants</xpath>
                    <value>
                        <RG-B_Plant_LargeTreePine>0.04</RG-B_Plant_LargeTreePine>
                        <RG-B_Plant_BlueTreePine>0.02</RG-B_Plant_BlueTreePine>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="ColdBog"]/wildPlants</xpath>
                    <value>
                        <RG-B_Plant_RimReed>0.2</RG-B_Plant_RimReed>
                        <RG-B_Plant_LargeTreePine>0.01</RG-B_Plant_LargeTreePine>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="BorealForest"]/wildPlants</xpath>
                    <value>
                        <RG-B_Plant_RimReed>1.0</RG-B_Plant_RimReed>
                        <RG-B_Plant_BlueTreePine>1.8</RG-B_Plant_BlueTreePine>
                        <RG-B_Plant_LargeTreePine>1.8</RG-B_Plant_LargeTreePine>
                        <RG-B_Potokus>0.5</RG-B_Potokus>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>