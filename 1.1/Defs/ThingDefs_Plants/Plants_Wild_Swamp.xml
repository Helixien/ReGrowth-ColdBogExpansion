<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>RG-CB_Dervish</defName>
        <label>dervish</label>
        <description>A beautiful bluish flower growing in colder biomes. Can only be found in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/Dervish</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.4</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.05</fertilityMin>
            <fertilitySensitivity>0</fertilitySensitivity>
            <growDays>2.5</growDays>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <maxMeshCount>4</maxMeshCount>
            <visualSizeRange>0.5~0.7</visualSizeRange>
            <topWindExposure>0.3</topWindExposure>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>3</wildClusterWeight>
            <wildOrder>6</wildOrder>
            <purpose>Beauty</purpose>
        </plant>
    </ThingDef>

    <ThingDef ParentName="TreeBase">
        <defName>RG-CB_Plant_BogTreePine</defName>
        <label>pine tree</label>
        <description>A tall conifer with blank spots. It grows only in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/BogTreePine</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.15, 0.3, 0.15)</volume>
                <offset>(0,0,-0.38)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
            <Nutrition>0.2</Nutrition>
        </statBases>
        <ingestible />
        <plant>
            <growDays>40</growDays>
            <visualSizeRange>1.3~2.5</visualSizeRange>
            <harvestWork>750</harvestWork>
            <harvestYield>10</harvestYield>
        </plant>
    </ThingDef>

</Defs>
